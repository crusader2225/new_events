<p id="notice"><%= notice %></p>
<div class="container-fluid">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.lat %></td>
        <td><%= event.long %></td>


        <% if current_user %>
          Logged in as <%= current_user.email %>
          <%= link_to "Log Out", logout_path %>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%= link_to 'Create New Event', new_event_path %>
            <% else %>
            <p><strong>REGISTER</strong> OR <strong>LOGIN</strong> TO CREATE YOUR OWN EVENT AND INVITE OTHERS TO JOIN!!</p>
            <button class="signup" name="user_buttons type="submit"><%= link_to 'Sign Up', signup_path%></button> or
            <button class="signup" name="user_buttons type="submit"><%= link_to 'Login here', login_path %></button>
            <% end %>

<h3 style="margin-bottom:30px;">See What's Happening</h3>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
